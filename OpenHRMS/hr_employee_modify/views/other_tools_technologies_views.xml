<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_technologies_tool_form" model="ir.ui.view">
			<field name="name">view.technologies.tool.form</field>
			<field name="model">other.tools.technologies.hr</field>
			<field name="arch" type="xml">
				<form >
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_technologies_tool_list" model="ir.ui.view">
			<field name="name">view.technologies.tool.list</field>
			<field name="model">other.tools.technologies.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree  editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_other_tools_form" model="ir.actions.act_window">
			<field name="name">Other Tools Technologies</field>
			<field name="res_model">other.tools.technologies.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_other_tools_types"
                    name="Other Tools Technologies"
                    action="open_other_tools_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
