<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_database_form" model="ir.ui.view">
			<field name="name">database.form</field>
			<field name="model">database.hr</field>
			<field name="arch" type="xml">
				<form string="Employee Database">
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_database_list" model="ir.ui.view">
			<field name="name">database.list</field>
			<field name="model">database.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree string="Employees Database" editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_database_form" model="ir.actions.act_window">
			<field name="name">Employee Database</field>
			<field name="res_model">database.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_database_types"
                    name="Database"
                    action="open_database_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
