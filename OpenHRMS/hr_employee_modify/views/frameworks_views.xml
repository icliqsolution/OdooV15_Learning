<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_frameworks_form" model="ir.ui.view">
			<field name="name">frameworks.form</field>
			<field name="model">frameworks.hr</field>
			<field name="arch" type="xml">
				<form string="Employee Frameworks">
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_frameworks_list" model="ir.ui.view">
			<field name="name">frameworks.list</field>
			<field name="model">frameworks.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree string="Employees Frameworks" editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_frameworks_form" model="ir.actions.act_window">
			<field name="name">Employee Frameworks</field>
			<field name="res_model">frameworks.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_frameworks_types"
                    name="Framework"
                    action="open_frameworks_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
