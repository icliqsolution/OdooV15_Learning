<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_os_form" model="ir.ui.view">
			<field name="name">view.os.form</field>
			<field name="model">opeting.system.hr</field>
			<field name="arch" type="xml">
				<form >
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_os_list" model="ir.ui.view">
			<field name="name">view.os.list</field>
			<field name="model">opeting.system.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree  editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_opeting_form" model="ir.actions.act_window">
			<field name="name">Opeting System</field>
			<field name="res_model">opeting.system.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_systop_types"
                    name="Opeting System"
                    action="open_opeting_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
