<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_ops_form" model="ir.ui.view">
			<field name="name">view.ops.form</field>
			<field name="model">development.ops.tool.hr</field>
			<field name="arch" type="xml">
				<form >
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_ops_list" model="ir.ui.view">
			<field name="name">view.ops.list</field>
			<field name="model">development.ops.tool.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree  editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_development_ops_form" model="ir.actions.act_window">
			<field name="name">Development Ops Tool</field>
			<field name="res_model">development.ops.tool.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_dops_types"
                    name="Development Ops Tool"
                    action="open_development_ops_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
