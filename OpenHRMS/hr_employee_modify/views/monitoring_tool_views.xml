<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_monitoring_tool_form" model="ir.ui.view">
			<field name="name">view.monitoring.tool.form</field>
			<field name="model">monitoring.tool.hr</field>
			<field name="arch" type="xml">
				<form >
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_monitoring_tool_list" model="ir.ui.view">
			<field name="name">view.monitoring.tool.list</field>
			<field name="model">monitoring.tool.hr</field>
			<!-- <field eval="8" name="priority"/> -->
			<field name="arch" type="xml">
				<tree  editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record id="open_monitoring_form" model="ir.actions.act_window">
			<field name="name">Monitoring Tool</field>
			<field name="res_model">monitoring.tool.hr</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
                    id="menu_config_moni_types"
                    name="Monitoring Tool"
                    action="open_monitoring_form"
                    parent="hr.menu_config_plan"
                    groups="base.group_no_one"
                    sequence="99"/>
	</data>
</odoo>
